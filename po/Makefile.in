GETTEXT_PACKAGE ?= abiword

MSGFMT = @MSGFMT@

prefix = @prefix@
datarootdir = @datarootdir@
localedir = @localedir@

top_srcdir = @top_srcdir@

po_files = $(wildcard *.po)
mo_files = $(subst .po,.mo, $(po_files))

all: $(mo_files)

dist:

clean:
	rm -f $(mo_files) $(GETTEXT_PACKAGE).pot

install: all
	-$(foreach lang, $(subst .mo,, $(mo_files)), if test -d $(localedir)/$(subst -,_,$(lang))/LC_MESSAGES; then install -m 644 $(lang).mo $(localedir)/$(subst -,_,$(lang))/LC_MESSAGES/$(GETTEXT_PACKAGE).mo; fi; )

uninstall:
	-$(foreach lang, $(subst .mo,, $(mo_files)), file=$(localedir)/$(subst -,_,$(lang))/LC_MESSAGES/$(GETTEXT_PACKAGE).mo; if test -f $$file; then rm -f $$file; fi; )

update-po: $(GETTEXT_PACKAGE).pot
	-$(foreach file, $(po_files), intltool-update --gettext-package $(GETTEXT_PACKAGE) $(subst .po,,$(file)); )

%.mo: %.po
	$(MSGFMT) -o $@ $<

$(GETTEXT_PACKAGE).pot:
	intltool-update --pot --gettext-package=$(GETTEXT_PACKAGE)
