    PUSHBUTTON     "Cancel",	XAP_RID_DIALOG_LANGUAGE_BTN_CANCEL,	62,80,50,14
    GROUPBOX       "Text: ",	XAP_RID_DIALOG_LANGUAGE_FRM_LANGUAGE,	7,7,103,66
    LISTBOX						XAP_RID_DIALOG_LANGUAGE_LBX_LANGUAGE,	14,21,91,49,
	                            WS_VSCROLL | WS_TABSTOP | LBS_NOINTEGRALHEIGHT | LBS_NOTIFY
END

#endif /* RC_INVOKED */
