#define XAP_RID_DIALOG_LANGUAGE_BTN_OK				IDOK
#define XAP_RID_DIALOG_LANGUAGE_BTN_CANCEL			IDCANCEL
#define XAP_RID_DIALOG_LANGUAGE_FRM_LANGUAGE		1001
#define XAP_RID_DIALOG_LANGUAGE_LBX_LANGUAGE		1002

#ifdef RC_INVOKED
